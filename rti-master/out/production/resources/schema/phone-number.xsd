<?xml version="1.0"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:stl="http://www.codesynthesis.com/xmlns/xsstl"
            targetNamespace="http://www.codesynthesis.com/xmlns/xsstl">

